<div class="property-main-photo" style="background-image:url('<%= property_photo_url @properties.last %>')">
  <div class="photo-overlay">
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-sm-8">
      <div class="row">
        <div class="col-lg-5">
          <p class="h4 mb-0"> <%= @user.full_name %> </p>
          <p class="mb-2"> <%= @user.company %> </p>
       </div>
       <div class="col-lg-7 text-center">
         <div class="row mt-sm-3 bg-light p-3">
            <div class="col-3">
              <i class="fas fa-bed text-muted ml-0"></i> <br />
               <small><%= @properties_sold %>Sold</small>
            </div>
            <div class="col-3">
              <i class="fas fa-bed text-muted ml-0"></i> <br />
               <small><%= @properties_for_sale %>For sale</small>
            </div>
            <div class="col-3">
              <i class="fas fa-bath text-muted ml-0"></i> <br />  
               <small><%= @properties_leased %>Leased</small>
            </div> 
            <div class="col-3">
              <i class="fas fa-car text-muted ml-0"></i> <br />                
               <small><%= @properties_for_rent %>For rent</small>
            </div>
          </div>
        </div>  
      </div>
      
      <div class="row border-top border-bottom mt-5 mb-4 pt-4 pb-4">
        <div class="col-6">
          Properties
        </div>  
        <div class="col-6 text-right">
          <strong><%= link_to "Can I afford this property?" , "#", class: "text-success" %> </strong>
        </div>
      </div>

      <div class="row">
        <div class="col"> 
          <p class="h5">Description</p>
         
          <div id="prop-details" class="">
            <%= simple_format @user.details %>
          </div>  
          <button class="btn btn-outline-info mt-3 mb-3" id="toggleDetails">Show more</button>  
        </div>
      </div>  
    </div>
    <div class="col-md-4">
        <%= render "properties/agent_details", agent: @user %>
    </div>
  </div>
</div>
<section class=" mt-5 mb-5 ">
  <div class="container">
    <div class="row">
      <%= render "properties/list", properties: @properties%>
    </div>
  </div>
</section>
<%=  render "properties/send_email_modal", agent: @user %>