
<button type="button" class="btn btn-primary" data-whatever="@mdo">Open modal for @mdo</button>

<div class="modal fade" id="contact-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message for <%= @agent.first_name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag email_agent_path, id: "email-agent" do %>
          <%= hidden_field_tag :agent_id, @agent_id%>
          
          <div class="form-group">
            <label for="message-text" class="col-form-label">Your name:</label>
            <%= text_field_tag :name, nil, class: "form-control", id:"message-text"%>
          </div>

           <div class="form-group">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>
